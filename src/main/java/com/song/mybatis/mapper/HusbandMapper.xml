<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.song.mybatis.mapper.HusbandMapper">
	<!-- 自定义返回的结果集 -->
	<resultMap type="HusbandBean" id="husbandAndWife">
		<id property="id" column="id" javaType="java.lang.Integer" />
		<result property="name" column="name" javaType="java.lang.String" />
		
		<!-- association – 一个复杂的类型关联；许多结果将包成这种类型 嵌入结果映射 – 结果映射自身的关联，或者参考一个 column="id" 
			这里的id指的是在tb_wife表的主键id查询妻子，所以在妻子mapper里有个方法 -->
		<association property="wife" column="id" javaType="WifeBean" select="com.song.mybatis.mapper.WifeMapper.getWifeByHusbandId"></association>
	</resultMap>

	<insert id="insertHusband" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO tb_husband (husband_name) VALUES (#{name})
	</insert>

	<select id="getHusbandById" resultMap="HusbandBean">
		SELECT * FROM tb_husband
		WHERE id=#{id}
	</select>

	<select id="getHusbandAndWife" resultMap="husbandAndWife">
		SELECT * FROM t_husband
		WHERE id=#{id}
	</select>

</mapper>